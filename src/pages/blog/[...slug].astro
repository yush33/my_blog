---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import { getCollection } from 'astro:content';
import TagFilter from '../../components/TagFilter.astro';
import { getAllTags, filterPostsByTag } from '../../utils/blog';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

import { getBlogPosts, getAllTags, filterPostsByTag } from '../../utils/blog';

const allPosts = await getBlogPosts();
const allTags = getAllTags(allPosts);

const relatedPosts = filterPostsByTag(
  allPosts.filter((p) => p.slug !== post.slug),
  post.data.tags?.[0] || ''
).slice(0, 3);

const baseUrl = import.meta.env.BASE_URL;
---

<BaseLayout title={`${post.data.title} - My Blog`} description={post.data.description}>
  <Header />
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <article class="prose prose-lg dark:prose-invert max-w-none">
      <header class="mb-8">
        {post.data.category && (
          <span class="inline-block px-3 py-1 text-sm font-semibold text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/30 rounded-full mb-4">
            {post.data.category}
          </span>
        )}
        <h1 class="text-4xl font-bold mb-4">{post.data.title}</h1>
        <div class="flex items-center gap-4 text-gray-600 dark:text-gray-400 mb-6">
          <time datetime={post.data.pubDate.toISOString()}>
            {new Intl.DateTimeFormat('ko-KR', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            }).format(post.data.pubDate)}
          </time>
        </div>
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-6">
            {post.data.tags.map((tag) => (
              <a
                href={`${baseUrl}blog?tag=${encodeURIComponent(tag)}`}
                class="px-3 py-1 text-sm bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full hover:bg-primary-100 dark:hover:bg-primary-900/30 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
              >
                #{tag}
              </a>
            ))}
          </div>
        )}
      </header>
      
      <div class="content">
        <Content />
      </div>
    </article>

    {relatedPosts.length > 0 && (
      <section class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-800">
        <h2 class="text-2xl font-bold mb-6">관련 포스트</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {relatedPosts.map((relatedPost) => (
            <a href={`${baseUrl}blog/${relatedPost.slug}`} class="block">
              <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl overflow-hidden border border-gray-200 dark:border-gray-700 p-4" style="transition: box-shadow 0.3s ease, transform 0.3s ease;">
                <h3 class="text-lg font-bold mb-2 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                  {relatedPost.title}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2">{relatedPost.description}</p>
              </article>
            </a>
          ))}
        </div>
      </section>
    )}
  </main>
</BaseLayout>

<style>
  .content {
    @apply text-gray-800 dark:text-gray-200;
  }
  
  .content h2 {
    @apply text-3xl font-bold mt-8 mb-4;
  }
  
  .content h3 {
    @apply text-2xl font-bold mt-6 mb-3;
  }
  
  .content p {
    @apply mb-4 leading-7;
  }
  
  .content ul, .content ol {
    @apply mb-4 ml-6;
  }
  
  .content li {
    @apply mb-2;
  }
  
  .content code {
    @apply bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded text-sm;
  }
  
  .content pre {
    @apply bg-gray-100 dark:bg-gray-800 p-4 rounded-lg overflow-x-auto mb-4;
  }
  
  .content pre code {
    @apply bg-transparent p-0;
  }
  
  .content a {
    @apply text-primary-600 dark:text-primary-400 hover:underline;
  }
  
  .content blockquote {
    @apply border-l-4 border-primary-500 pl-4 italic my-4 text-gray-600 dark:text-gray-400;
  }
  
  .content img {
    @apply rounded-lg my-4 max-w-full;
  }
</style>


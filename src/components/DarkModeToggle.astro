<button
  id="dark-mode-toggle"
  class="p-2 rounded-lg bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
  aria-label="다크모드 토글"
>
  <svg id="sun-icon" class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
  </svg>
  <svg id="moon-icon" class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
  </svg>
</button>

<script>
  const toggle = document.getElementById('dark-mode-toggle');
  const html = document.documentElement;

  // 다크모드 상태 동기화 함수
  function syncDarkMode() {
    const darkMode = localStorage.getItem('dark-mode');
    const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    
    // 명시적으로 처리: 'true'면 다크, 'false'면 라이트, null이면 시스템 설정
    let shouldBeDark = false;
    if (darkMode === 'true') {
      shouldBeDark = true;
    } else if (darkMode === 'false') {
      shouldBeDark = false;
    } else if (darkMode === null) {
      shouldBeDark = prefersDark;
    }
    
    if (shouldBeDark) {
      html.classList.add('dark');
      html.style.setProperty('background-color', '#111827', 'important');
      document.body.style.setProperty('background-color', '#111827', 'important');
    } else {
      html.classList.remove('dark');
      html.style.setProperty('background-color', 'white', 'important');
      document.body.style.setProperty('background-color', 'white', 'important');
    }
  }

  // View Transitions 후에도 다크모드 상태 유지
  document.addEventListener('astro:page-load', () => {
    syncDarkMode();
  });

  // 토글 버튼 클릭 이벤트
  toggle?.addEventListener('click', () => {
    html.classList.toggle('dark');
    const isDarkMode = html.classList.contains('dark');
    localStorage.setItem('dark-mode', isDarkMode.toString());
    
    // 즉시 배경색 업데이트
    if (isDarkMode) {
      html.style.setProperty('background-color', '#111827', 'important');
      document.body.style.setProperty('background-color', '#111827', 'important');
    } else {
      html.style.setProperty('background-color', 'white', 'important');
      document.body.style.setProperty('background-color', 'white', 'important');
    }
  });
</script>


---
interface Props {
  tags: string[];
  currentTag?: string;
}

const { tags, currentTag } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

{tags.length > 0 && (
  <div class="mb-8">
    <h3 class="text-lg font-semibold mb-4">태그</h3>
    <div class="flex flex-wrap gap-2">
      <a
        href={`${baseUrl}blog`}
        class={`px-4 py-2 rounded-full text-sm font-medium transition-colors ${
          !currentTag
            ? 'bg-primary-600 text-white'
            : 'bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-primary-100 dark:hover:bg-primary-900/30'
        }`}
      >
        전체
      </a>
      {tags.map((tag) => (
        <a
          href={`${baseUrl}blog?tag=${encodeURIComponent(tag)}`}
          class={`px-4 py-2 rounded-full text-sm font-medium transition-colors ${
            currentTag === tag
              ? 'bg-primary-600 text-white'
              : 'bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-primary-100 dark:hover:bg-primary-900/30'
          }`}
        >
          #{tag}
        </a>
      ))}
    </div>
  </div>
)}


---
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "개인 블로그입니다." } = Astro.props;
---

<!doctype html>
<html lang="ko" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {/* 페이지 렌더링 전에 다크 모드 클래스 적용 - 깜빡임 방지 */}
    <script is:inline>
      (function() {
        try {
          const darkMode = localStorage.getItem('dark-mode');
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          
          // 명시적으로 처리: 'true'면 다크, 'false'면 라이트, null이면 시스템 설정
          let shouldBeDark = false;
          if (darkMode === 'true') {
            shouldBeDark = true;
          } else if (darkMode === 'false') {
            shouldBeDark = false;
          } else if (darkMode === null) {
            shouldBeDark = prefersDark;
          }
          
          if (shouldBeDark) {
            document.documentElement.classList.add('dark');
            document.documentElement.style.setProperty('background-color', '#111827', 'important');
            if (document.body) {
              document.body.style.setProperty('background-color', '#111827', 'important');
            }
          } else {
            document.documentElement.classList.remove('dark');
            document.documentElement.style.setProperty('background-color', 'white', 'important');
            if (document.body) {
              document.body.style.setProperty('background-color', 'white', 'important');
            }
          }
        } catch (e) {
          // localStorage 접근 실패 시 기본값 사용 (라이트 모드)
          document.documentElement.classList.remove('dark');
          document.documentElement.style.setProperty('background-color', 'white', 'important');
          if (document.body) {
            document.body.style.setProperty('background-color', 'white', 'important');
          }
        }
      })();
    </script>
    <ViewTransitions />
  </head>
  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 min-h-screen flex flex-col">
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  /* 기본 폰트 설정 */
  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  }
  
  /* 배경색 설정 - 라이트 모드 (기본값) */
  html {
    background-color: white;
  }
  
  html:not(.dark) {
    background-color: white !important;
  }
  
  html body {
    background-color: white;
  }
  
  html:not(.dark) body {
    background-color: white !important;
  }
  
  /* 배경색 설정 - 다크 모드 */
  html.dark {
    background-color: #111827 !important;
  }
  
  html.dark body {
    background-color: #111827 !important;
  }
  
  /* View Transitions 전환 중 배경색 유지 - 모든 경우 커버 */
  html[data-astro-transition-scope],
  html[data-astro-transition-persist] {
    background-color: white !important;
  }
  
  html[data-astro-transition-scope] body,
  html[data-astro-transition-persist] body {
    background-color: white !important;
  }
  
  html.dark[data-astro-transition-scope],
  html.dark[data-astro-transition-persist] {
    background-color: #111827 !important;
  }
  
  html.dark[data-astro-transition-scope] body,
  html.dark[data-astro-transition-persist] body {
    background-color: #111827 !important;
  }
  
  /* View Transitions 루트 전환 중 배경색 유지 */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    background-color: white !important;
  }
  
  html.dark ::view-transition-old(root),
  html.dark ::view-transition-new(root) {
    background-color: #111827 !important;
  }
  
  /* body 스타일 - transition 제거하여 깜빡임 방지 */
  body {
    font-feature-settings: "kern" 1;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    background-color: white !important;
    /* transition 제거 - 배경색 변경 시 애니메이션 없음 */
  }
  
  html.dark body {
    background-color: #111827 !important;
  }
  
  /* View Transitions 애니메이션 - 부드러운 페이드 효과 */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation-duration: 0.2s;
    animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    /* 배경색은 애니메이션하지 않음 */
    background-color: inherit !important;
  }
  
  ::view-transition-old(root) {
    animation-name: fade-out;
  }
  
  ::view-transition-new(root) {
    animation-name: fade-in;
  }
  
  @keyframes fade-out {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }
  
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  /* main 컨테이너 전환 효과 */
  main {
    animation: fade-in 0.2s ease-in-out;
  }
</style>

